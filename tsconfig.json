{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "noResolve": false,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "isolatedModules": false,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2015.promise",
            "es5",
            "es6",
        ],
        "declaration": true,
        "outDir": "dist"
    },
    "files": [
        "./src/Game/index.ts"
    ],
    "types": [
        "babylonjs",
        "babylonjs-gui",
        "babylonjs-materials",
        "babylonjs-loaders",
        "babylonjs-inspector"
    ]
}
